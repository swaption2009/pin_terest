<p id="notice"><%= notice %></p>

<h1>Pins</h1>

<table id="posts">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Board</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="page">
    <% @pins.each do |pin| %>
      <tr class="post">
        <td><%= pin.name %></td>
        <td><%= link_to(image_tag(pin.image.thumb.url), pin) %></td>
        <td><%= pin.board %></td>
        <td><%= link_to 'Show', pin %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @pins %>
<br>

<%= link_to 'New Pin', new_pin_path %>
